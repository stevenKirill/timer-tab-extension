{
    "manifest_version": 2,
    "name": "Web page Timer",
    "short_name": "Timer",
    "description": "description",
    "version": "1.0",
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "scripts/content.js"
        ]
      }
    ],
    "background": {
        "scripts": ["scripts/background.js"]
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Simple Timer"
    },
    "permissions": ["tabs"]
  }